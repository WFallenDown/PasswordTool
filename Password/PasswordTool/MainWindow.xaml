        xmlns:local="clr-namespace:PasswordTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="mainpage">
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="New..."  />
                <MenuItem Header="Open..." InputGestureText="ctrl+o" />
